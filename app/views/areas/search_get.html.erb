<% if flash[:danger] %>
  <div class="col-md-6 offset-md-3 mt-3 alert-col">
    <div class="alert alert-danger" role="alert">
      <%= flash[:danger] %>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  </div>
<% end %>
  
<div  class = "w-50 mx-auto">
  <%= form_with url: areas_search_path, method: :post, local: true  do |f| %>
    <h3 class="text-center">エリア検索</h3>
      <div class="form-group">
        <%= f.label "郵便番号で検索" %>
        <p><%= f.text_field :zipcode, class:"form-control" %></p>
      </div>
    <%= f.submit "検索", class:"btn btn-primary btn-block" %>
  <% end %>
</div>